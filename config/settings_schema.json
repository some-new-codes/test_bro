  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Heading"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Shopify font",
        "info": "Selecting different fonts can affect the speed of your online store. Learn more about [system fonts](https://help.shopify.com/en/manual/online-store/store-speed/improving-speed#fonts).",
        "default": "din_next_n7"
